<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBar" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="fontMonospace" parent="android:Widget.TextView">
        <item name="android:typeface">monospace</item>
    </style>


    <!--styling for individual data cells in the results table -->

    <style name="tableTextAppearance" >
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16dp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:gravity">center_horizontal</item>

    </style>

    <!--styling for individual header cells in the results table -->

    <style name="tableHdrAppearance" >
        <item name="android:background">@color/bannerColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18dp</item>
        <item name="android:typeface">monospace</item>
    </style>


    <style name="defInfoAppearance" >
        <item name="android:background">@color/bannerColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16dp</item>
        <item name="android:typeface">monospace</item>
    </style>


</resources>
